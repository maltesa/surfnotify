.col-sm-6.mt-3
  .card{ class: rule[:activated] ? 'border-success' : '' }
    .card-header
      = rule[:name]
      .pull-right
        activated
        = check_box_tag "#{rule[:key]}_activated", '1', rule[:activated], class: 'activated'
    .card-body.rule
      - if rule[:type] == :range_slider
        .range-slider.rule-value{ id: rule[:key], 'data-value': rule[:value], 'data-scale': rule[:values].to_json, 'data-min': rule[:values].min, 'data-max': rule[:values].max }
      - elsif rule[:type] == :select
        = select_tag rule[:key], options_for_select(rule[:values], rule[:value]), id: rule[:key],
          class: 'rule-value'
      - elsif rule[:type] == :select_mult
        = select_tag rule[:key], options_for_select(rule[:values], rule[:value]), id: rule[:key],
          multiple: true, class: 'rule-value'
