<div class="container">
  <div class="row">
<p id="notice"><%= notice %></p>

<h3>Notification Overview</h3>


<table>
  <thead>
    <tr>
      <th>Alert</th>
      <th>Name</th>
      <th>Spot</th>
      <th>Swellheight</th>
      <th>Breakingsize</th>
      <th>Wavedirection</th>
      <th>Windspeed</th>
      <th>Winddirection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td class="possiblealert">TOMORROW</td>
        <td class="spot"><%= notification.name %></td>
        <td class="spot"><%= notification.spot %></td>
        <td><i class="fa fa-circle yes"></i> <%= notification.rules[:swell_size] %> <span class= "metric">(min 0.5m)</span></td>
        <td><i class="fa fa-circle no"></i> <%= notification.rules[:breaking_size] %></td>
        <td><i class="fa fa-circle no"></i> <%= notification.rules[:swell_dir] %> <span class= "metric">(SW-NW)</span></td>
        <td><i class="fa fa-circle yes"></i> <%= notification.rules[:wind_speed] %> <span class= "metric">(max 25 kmh)</span></td>
        <td><i class="fa fa-circle yes"></i> <%= notification.rules[:wind_dir] %> <span class= "metric">(0)</span></td>
        <td class="edit"><%= link_to edit_notification_path(notification) do %><i class="fa fa-edit"></i><% end %></td>
        <td class="edit"><%= link_to notification, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash"></i><% end %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to raw("New Notification"), "/notifications", class: "btn-new" %>
</div>
</div>
