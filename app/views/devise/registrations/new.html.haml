.row.justify-content-center.mt-5
  .col-12.col-lg-7
    %h1 Sign up
    %hr/
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-sign
        = devise_error_messages!
        = f.label :email, class: 'sr-only'
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-Mail'
        = f.label :password, class: 'sr-only'
        = f.password_field :password, autocomplete: 'off', class: 'form-control middle', placeholder: 'Password'
        = f.label :password_confirmation, class: 'sr-only'
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Password confirmation'
        .actions
          = f.submit 'Sign up', class: 'btn btn-outline-primary btn-lg btn-block'
    %hr/
    .alternatives
      = render partial: 'devise/shared/links', locals: { link_class: 'btn btn-outline-dark btn-sm card-link' }

