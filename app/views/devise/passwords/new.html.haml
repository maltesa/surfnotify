.row
  .col
    %h1 Forgot your password?
    %hr/
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'form-control'
      %br
      .actions
        = f.submit 'Send me reset password instructions', class: 'btn btn-outline-primary btn-lg'
      .alternatives
        %hr/
        = render partial: 'devise/shared/links', locals: { link_class: 'card-link' }
