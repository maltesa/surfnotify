.row.justify-content-center
  .col-12.col-lg-7.mt-5.mb-5
    %h1.display-4.text-light Password?
    %hr/
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      = f.label :email, class: 'sr-only'
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-Mail'
      %br
      .actions
        = f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-lg btn-block'
      .alternatives
        %hr/
        = render partial: 'devise/shared/links', locals: { link_class: 'btn btn-dark btn-sm card-link' }
