.row.justify-content-center.mt-5
  .col-12.col-lg-7
    %h1 Forgot your password?
    %hr/
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'form-control'
      %br
      .actions
        = f.submit 'Send me reset password instructions', class: 'btn btn-outline-primary btn-lg btn-block'
      .alternatives
        %hr/
        = render partial: 'devise/shared/links', locals: { link_class: 'btn btn-outline-dark btn-sm card-link' }
