.row.justify-content-center.mt-5
  .col-12.col-lg-7
    %h1 Resend confirmation instructions
    %hr/
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control'
        %br/
      .actions
        = f.submit 'Resend confirmation instructions', class: 'btn btn-outline-primary btn-lg btn-block'
      .alternatives
        %hr/
        = render partial: 'devise/shared/links', locals: { link_class: 'btn btn-outline-dark btn-sm card-link' }
